@model GacxepBookstore.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin: 10px auto; width: 70%">
    <h2 style="text-align: center">CHI TIẾT SÁCH</h2>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <strong>TÊN SÁCH</strong>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NamePro)
            </dd>

            <dt>
                <strong>TÁC GIẢ</strong>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Author)
            </dd>

            <dt>
               <strong>NHÀ XUẤT BẢN</strong>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Publisher)
            </dd>

            <dt>
                <strong>MÔ TẢ</strong>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DecriptionPro)
            </dd>

            <dt>
                <strong>GIÁ</strong>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                <strong>BÌA SÁCH</strong>
            </dt>

            <dd>
                <img src="~/Images/@Model.ImagePro" />
            </dd>

            <dt>
                <strong>THỂ LOẠI</strong>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category1.NameCate)
            </dd>
        </dl>
    </div>
    <p>
        @Html.ActionLink("CHỈNH SỬA", "Edit", new { id = Model.ProductID }, new { @class = "btn btn-success"})
        @Html.ActionLink("TRỞ LẠI DANH SÁCH", "Index")
    </p>
</div>
