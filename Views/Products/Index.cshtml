@model IEnumerable<GacxepBookstore.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="margin: 10px auto; width: 90%">
    <h2 style="text-align: center">THÔNG TIN SÁCH</h2>
    <p>
        @Html.ActionLink("THÊM", "Create", null, new { @class = "btn btn-danger"})
    </p>

    <hr />
    <table class="table" style="margin-left: auto; margin-right: auto;">
        <tr style="">

            <th>
                TÊN SÁCH
            </th>
            
            <th>
                TÁC GIẢ
            </th>
            
            <th>
                NHÀ XUẤT BẢN
            </th>
            
            <th>
                MÔ TẢ
            </th>
            
            <th>
                GIÁ TIỀN
            </th>
            
            <th>
                BÌA SÁCH
            </th>
            
            <th>
                THỂ LOẠI
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NamePro)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Publisher)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DecriptionPro)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ImagePro)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Category1.NameCate)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }, new { @class = "btn btn-sucess" })
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>

            }
    </table>
    <hr />
</div>
